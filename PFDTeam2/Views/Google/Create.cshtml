<!-- Views/Google/Create.cshtml -->
@model EventModel
@Html.AntiForgeryToken()
@{
    ViewData["Title"] = "CreateEvent";
}

<h2>Create Event</h2>

<form asp-controller="GoogleCalendar" asp-action="CreateEvent" method="post">
    <div class="form-group">
        <label asp-for="Summary"></label>
        <input asp-for="Summary" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="StartDateTime"></label>
        <input asp-for="StartDateTime" type="datetime-local" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="EndDateTime"></label>
        <input asp-for="EndDateTime" type="datetime-local" class="form-control" />
    </div>
    
    <button type="submit" class="btn btn-primary">Create Event</button>
</form>