﻿@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Give Feedback</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <style>

        @@import url('https://fonts.googleapis.com/css2?family=Fasthand&family=Poppins:wght@300;400;500;600;700&display=swap');
        
        body {
            background-image: url(https://www.workato.com/product-hub/wp-content/uploads/2021/11/Octoberproductheader_compress.gif);
            margin: 0;
            padding: 40px;
            font-family: "Poppins", sans-serif;
        }

        .container {
            background-color: #fff;
            border-radius: 10px;
            padding: 40px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            max-width: 800px;
            margin: auto;
        }

        h2 {
            text-align: center;
            margin-bottom: 40px;
            font-size: 2em;
        }

        label {
            font-weight: bold;
            display: block;
            margin-bottom: 20px;
            font-size: 1.2em;
        }

        .emoji-options {
            display: flex;
            justify-content: space-around;
            margin-bottom: 40px;
        }

        .emoji-option {
            text-align: center;
            cursor: pointer;
            border-radius: 50%;
            padding: 20px;
            margin: 10px;
            transition: transform 0.2s ease-in-out;
        }

            .emoji-option:hover,
            .emoji-option.selected-emoji,
            .emoji-option.clicked {
                transform: scale(1.2);
            }

            .emoji-option input {
                display: none;
            }

            .emoji-option label {
                display: block;
                font-size: 2em;
                margin-bottom: 10px;
            }

        .selected-indicator {
            box-shadow: 0 0 10px #007bff; /* Glow effect for the selected emoji */
        }

        input[type="submit"] {
            background-color: #007bff;
            color: #fff;
            padding: 20px 40px;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            font-size: 1.2em;
            width: 100%;
        }

            input[type="submit"]:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <div class="container">
        <h2>Give Feedback on the Onboarding Process</h2>
        <form action="@Url.Action("ProcessFeedback")" method="post">
            <div class="form-group">
                <label for="feedback">Your feedback is kept private and not identifiable:</label>
                <textarea class="form-control" name="feedback" rows="4" placeholder="Type your feedback here" required></textarea>
            </div>
            <div class="form-group">
                <label>Choose an emoji:</label>
                <div class="emoji-options" onclick="selectEmoji(event)">
                    <div class="emoji-option" id="excited">
                        <input type="radio" name="selectedEmoji" value="😃" required>
                        <label>😃</label>
                    </div>
                    <div class="emoji-option" id="happy">
                        <input type="radio" name="selectedEmoji" value="😊" required>
                        <label>😊</label>
                    </div>
                    <div class="emoji-option" id="neutral">
                        <input type="radio" name="selectedEmoji" value="😐" required>
                        <label>😐</label>
                    </div>
                    <div class="emoji-option" id="sad">
                        <input type="radio" name="selectedEmoji" value="😞" required>
                        <label>😞</label>
                    </div>
                    <div class="emoji-option" id="angry">
                        <input type="radio" name="selectedEmoji" value="😡" required>
                        <label>😡</label>
                    </div>
                </div>
            </div>
            <div class="form-group text-center">
                <input type="submit" class="btn btn-primary" value="Submit Feedback">
            </div>
        </form>
    </div>

    <script>
        function selectEmoji(event) {
            const emojiOptions = document.querySelectorAll('.emoji-option');
            emojiOptions.forEach(option => {
                option.classList.remove('selected-indicator', 'clicked');
            });

            const selectedOption = event.target.closest('.emoji-option');
            if (selectedOption) {
                selectedOption.classList.add('selected-indicator', 'clicked');
            }
        }
    </script>
</body>
</html>
