<script async>
    $("textarea").each(function () {
        this.setAttribute("style", "height:" + (this.scrollHeight) + "px;overflow-y:hidden;");
    }).on("input", function () {
        this.style.height = 0;
        this.style.height = (this.scrollHeight) + "px";
    });
</script>

<h2>Feedback Processing</h2>

<form action="@Url.Action("ProcessFeedback")" method="post">
    <label for="feedback">Your feedback is kept private and not identifiable.</label>
    <br />
    <textarea rows="4" cols="45"></textarea>
    <br />
    <input type="submit" value="Process Feedback">
</form>

