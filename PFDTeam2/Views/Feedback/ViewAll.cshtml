@model List<PFDTeam2.Models.Feedback>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "All Responses";
}

<head>
    <meta name="viewport" content="width=device-width" />
    <title>View All Feedback</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<h2>Feedback List</h2>
<table class="table">
    <thead>
        <tr>
            <th>Feedback ID</th>
            <th>Text</th>
            <th>Relevance</th>
            <th>Positivity</th>
            <th>Action Taken</th>
            <th>Response</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var feedback in Model)
        {
            <tr>
                <td>@feedback.FeedbackId</td>
                <td>@feedback.Text</td>
                <td>@(feedback.IsRelevant ? "Relevant" : "Irrelevant")</td>
                <td>@(feedback.IsPositive ? "Positive" : "Negative")</td>
                <td>@(feedback.ActionTaken ? "Yes" : "No")</td>
                <td>@(feedback.Response ?? "-")</td>
                <td>
                    @if (feedback.Response is null)
                    {
                        <a class="respond-btn" href="@Url.Action("Respond", "Feedback",  new { id = feedback.FeedbackId })">Respond</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>