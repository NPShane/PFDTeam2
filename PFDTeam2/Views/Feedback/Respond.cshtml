@{
    ViewData["Title"] = "Respond to Feedback";
}

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Respond to Feedback</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<h2>Respond to Feedback Given</h2>

<form asp-action="Respond" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="FeedbackId" />

    <div class="form-group">
        <label asp-for="Text">Feedback/Enquiry:</label>
        <hr />
        <textarea readonly>@Model.Text</textarea>
    </div>

    <div class="form-group"> 
        <label asp-for="Response">Response:</label>
        <hr />
        <textarea rows="4" required="required" asp-for="Response"></textarea>
    </div>

    <div class="form-group">
        <button type="submit">Submit Response</button>
    </div>
</form>